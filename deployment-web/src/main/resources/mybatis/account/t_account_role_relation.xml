<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<!-- 这里namespace必须是接口的路径，不然要运行的时候要报错 “is not known to the MapperRegistry” -->
<mapper namespace="com.ibeiliao.deployment.admin.dao.account.AccountRoleRelationDao">

	<!-- 新增 -->
	<insert id="save" parameterType="com.ibeiliao.deployment.admin.po.account.AccountRoleRelationPO" useGeneratedKeys="false" >
		insert into t_account_role_relation (uid,role_id) values (#{uid},#{roleId})
	</insert>

	<!-- 根据主键，删除数据 -->
	<delete id="deleteById" parameterType="Map">
		DELETE FROM t_account_role_relation WHERE role_id=#{roleId} AND uid=#{uid}
	</delete>

	<!-- 更新 -->
	<update id="update" parameterType="com.ibeiliao.deployment.admin.po.account.AccountRoleRelationPO">
		update t_account_role_relation set  where role_id=#{roleId} and uid=#{uid}
	</update>

	<!-- 根据主键读取记录（主键可能有多个） -->
	<select id="getById" parameterType="Map" resultType="com.ibeiliao.deployment.admin.po.account.AccountRoleRelationPO">
		SELECT * FROM t_account_role_relation WHERE role_id=#{roleId} AND uid=#{uid}
	</select>

	<!-- 查询全部记录 -->
	<select id="listAll" resultType="com.ibeiliao.deployment.admin.po.account.AccountRoleRelationPO">
		SELECT * FROM t_account_role_relation
	</select>

	<!-- 通过用户编号查询该用户对应的角色信息 -->
	<select id="listRoleByAccount" parameterType="Map" resultType="com.ibeiliao.deployment.admin.po.account.RolePO">
		<![CDATA[
			select * from t_role where role_id in
			   (select role_id from t_account_role_relation where uid = #{uid}) order by role_id desc
		]]>
	</select>

	<!-- 根据用户编号获取角色编号 -->
	<select id="listByAccountId" parameterType="Long" resultType="com.ibeiliao.deployment.admin.po.account.AccountRoleRelationPO">
		select * from t_account_role_relation where uid = #{uid};
	</select>

	<!-- 判断用户/角色是否已经存在 -->
	<select id="isExist" parameterType="com.ibeiliao.deployment.admin.po.account.RolePO" resultType="java.lang.Integer">
		<![CDATA[
			select count(uid) from t_account_role_relation where uid = #{uid} and role_id = #{roleId}
		]]>
	</select>

	<!-- 删除指定用户、角色信息 -->
	<delete id="deleteSpecAccountRole" parameterType="com.ibeiliao.deployment.admin.po.account.AccountRoleRelationPO">
		delete from t_account_role_relation where uid = #{uid} and role_id = #{roleId}
	</delete>

	<!-- 依据用户删除用户角色信息 -->
	<delete id="deleteByAccount" parameterType="java.lang.Long">
		delete from t_account_role_relation where uid = #{uid}
	</delete>

</mapper>
