<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<!-- 这里namespace必须是接口的路径，不然要运行的时候要报错 “is not known to the MapperRegistry” -->
<mapper namespace="com.ibeiliao.deployment.admin.dao.account.RoleDao">

	<!-- 新增 -->
	<insert id="save" parameterType="com.ibeiliao.deployment.admin.po.account.RolePO" useGeneratedKeys="false" >
		insert into t_role (role_id,role_name,role_type,remarks,operator,last_modify,create_time) values (#{roleId},#{roleName},#{roleType},#{remarks},#{operator},#{lastModify},#{createTime})
	</insert>

	<!-- 根据主键，删除数据 -->
	<delete id="deleteById" parameterType="Map">
		DELETE FROM t_role WHERE role_id=#{roleId}
	</delete>

	<!-- 更新 -->
	<update id="update" parameterType="com.ibeiliao.deployment.admin.po.account.RolePO">
		update t_role set role_name=#{roleName},role_type=#{roleType},remarks=#{remarks},operator=#{operator},last_modify=#{lastModify} where role_id=#{roleId}
	</update>

	<!-- 根据主键读取记录（主键可能有多个） -->
	<select id="getById" parameterType="Map" resultType="com.ibeiliao.deployment.admin.po.account.RolePO">
		SELECT * FROM t_role WHERE role_id=#{roleId}
	</select>

	<!-- 查询全部记录 -->
	<select id="listAll" resultType="com.ibeiliao.deployment.admin.po.account.RolePO">
		SELECT * FROM t_role
	</select>

	<select id="getByName" parameterType="Map" resultType="com.ibeiliao.deployment.admin.po.account.RolePO">
		<![CDATA[
			select * from t_role where role_name = #{name}
		]]>
	</select>

	<select id="statRole" parameterType="Map" resultType="int">
		select count(1) from t_role where 1=1
		<if test="name != null and name!=''">
			and role_name like #{name}
		</if>
	</select>

	<select id="listRolesForPaging" parameterType="Map" resultType="com.ibeiliao.deployment.admin.po.account.RolePO">
		select * from t_role where 1=1
		<if test="rolename != null and rolename!=''">
			and role_name like #{rolename}
		</if>

		order by role_id desc limit #{startIndex}, #{limit}
	</select>

	<!-- 返回所有的角色 -->
	<select id="listRoles" resultType="com.ibeiliao.deployment.admin.po.account.RolePO">
		select * from t_role
	</select>

	<select id="listByAccount" parameterType="Map" resultType="com.ibeiliao.deployment.admin.po.account.RolePO">
		<![CDATA[
			select * from t_role where role_id in
			   (select role_id from t_account_role_relation where uid = #{uid}) order by role_type desc
		]]>
	</select>
</mapper>
